
@{
    Layout = null;
}
@model ShopingCart_App.Services.ProductService
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <table>
            <tr>
                <td>
                    Fruit:
                </td>
                <td>
                    @Html.DropDownListFor(m => m.ProductName,Model.SelectedList, "Please select")
                </td>
            </tr>
            <tr>
                <td>
                    Quantity:
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Quantity)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Submit" />
                </td>
            </tr>
        </table>
    }
   


</body>
</html>
