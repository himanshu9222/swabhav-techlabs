
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Banking_App.ViewModel.UserLoginViewModel
@using CaptchaMvc.HtmlHelpers

<article>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <fieldset class="scheduler-border">
            <legend class="scheduler-border">Login</legend>
            <hr />
            <div class="control-group">
                @Html.LabelFor(model => model.User.UserId, new { @class = "control-label input-label" })
                @Html.EditorFor(model => model.User.UserId)
                @Html.ValidationMessageFor(model => model.Message, "", new { @style = "color:red" })
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.User.Password, new { @class = "control-label input-label" })
                @Html.PasswordFor(model => model.User.Password)
                @Html.ValidationMessageFor(model => model.Message, "", new { @style = "color:red" })
            </div>
            
            <div>
                @if (Model.LoginState)
                {
                    <p style="color:red">@Model.Message </p>
                }
                
            </div>
            <div class="control-group">
                @Html.Captcha(6)
            </div>
            <div class="control-group">
                <input type="submit" value="LoginUser" class="btn btn-default" />
            </div>
        </fieldset>
    }

</article>

