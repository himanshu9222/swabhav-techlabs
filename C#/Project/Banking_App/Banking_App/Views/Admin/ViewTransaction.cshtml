
@{
    ViewBag.Title = "ViewTransaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Banking_App.ViewModel.AccountViewModel
<article>
    <h3>Transaction List for @Model.User.UserName</h3>

    <table class="table">
        <tr>
            <th>
                TransactionId
            </th>
            <th>
                Amount
            </th>
            <th>
                Transaction Type
            </th>
            <th>
                Transaction Date
            </th>
            <th>
                Account Number
            </th>
        </tr>

        @foreach (var item in Model.Account.TransactionList)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.TransactionId)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.Amount)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.TType)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.TDate)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.Account.AccountId)
                </th>
            </tr>
        }
    </table>

    @Html.ActionLink("Go Back","AdminAccount")
</article>

