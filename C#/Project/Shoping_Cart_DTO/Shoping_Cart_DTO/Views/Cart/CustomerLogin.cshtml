
@{
    Layout = null;
}

@model Shoping_Cart_DTO.ViewModel.CustomerViewModel
@using CaptchaMvc.HtmlHelpers
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LoginUser</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        legend.scheduler-border {
            width: inherit; /* Or auto */
            padding: 0 10px; /* To give a bit of padding on the left and right */
            border-bottom: none;
            font-size: 1.2em !important;
            font-weight: bold !important;
            text-align: left !important;
        }

        fieldset.scheduler-border {
            border: 1px groove #ddd !important;
            padding: 0 1.4em 1.4em 1.4em !important;
            margin: 0 0 1.5em 0 !important;
            -webkit-box-shadow: 0px 0px 0px 0px #000;
            box-shadow: 0px 0px 0px 0px #000;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h2>ShopingCart-App</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <fieldset class="scheduler-border">
            <legend class="scheduler-border">Login</legend>
            <hr />
            <div class="control-group">
                @Html.LabelFor(model => model.Customer.CustomerUserId, new { @class = "control-label input-label" })
                @Html.EditorFor(model => model.Customer.CustomerUserId)
                @Html.ValidationMessageFor(model => model.Customer.CustomerUserId, "", new { @style = "color:red" })
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.Customer.CustomerPassword, new { @class = "control-label input-label" })
                @Html.PasswordFor(model => model.Customer.CustomerPassword)
                @Html.ValidationMessageFor(model => model.Customer.CustomerPassword, "", new { @style = "color:red" })
            </div>
            <div>
                @if (Model.LoginState)
                {
                    <p style="color:green">@Model.Message </p>
                }
                else
                {
                    <p style="color:red">@Model.Message </p>
                }
            </div>
            <div class="control-group">
                @Html.Captcha(6)
            </div>
            <div class="control-group">
                <input type="submit" value="LoginUser" class="btn btn-default" />
            </div>
        </fieldset>
    }
</body>
</html>
